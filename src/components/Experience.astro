    /* Estilos para los kanji */
    .kanji-wrapper {
        pointer-events: none;
    }

    .kanji-svg {
        opacity: 0.3;
    }

    .kanji-stroke {
        stroke-dasharray: 4000;
        stroke-dashoffset: 4000;
    }

    .kanji-meaning {
        transition: opacity 0.5s ease-in-out;
    }
</style>

<script>
    import { gsap } from "gsap";
    import { ScrollTrigger } from "gsap/ScrollTrigger";
    import { SplitText } from "gsap/SplitText";

    // Esperar a que las fuentes y el DOM estén listos
    const initExperienceAnimations = async () => {
        try {
            await document.fonts.ready;
            
            gsap.registerPlugin(ScrollTrigger, SplitText);

            // Seleccionar los kanji
            const kanjiKai = document.querySelector("#kanji-kai .kanji-stroke");
            const kanjiZen = document.querySelector("#kanji-zen .kanji-stroke");
            const kanjiContainer = document.querySelector(".kanji-container");
            const kanjiKaiMeaning = document.querySelector("#kanji-kai").closest('.kanji-item').querySelector('.kanji-meaning');
            const kanjiZenMeaning = document.querySelector("#kanji-zen").closest('.kanji-item').querySelector('.kanji-meaning');

            // Seleccionar los párrafos de descripción
            const descriptionContainer = document.querySelector('.experience-description');
            const paragraphs = document.querySelectorAll('.experience-paragraph');

            // Verificar que los elementos existen
            if (!kanjiKai || !kanjiZen || !kanjiContainer) {
                console.error("No se encontraron los elementos kanji");
                return;
            }

            if (!descriptionContainer || paragraphs.length === 0) {
                console.error("No se encontraron los párrafos de descripción");
                return;
            }

            // Dividir cada párrafo en palabras
            const splits = [];
            paragraphs.forEach((paragraph) => {
                const split = new SplitText(paragraph, { type: 'words' });
                splits.push(split);
                
                // Inicializar las palabras invisibles
                gsap.set(split.words, { opacity: 0, y: 20 });
            });

            // Timeline para revelar el texto progresivamente con scroll
            const textTimeline = gsap.timeline({
                scrollTrigger: {
                    trigger: descriptionContainer,
                    start: "top 70%",
                    end: "bottom 60%",
                    scrub: 1,
                    // markers: true, // Descomentar para debugging
                }
            });

            // Animar todas las palabras de todos los párrafos secuencialmente
            splits.forEach((split, index) => {
                textTimeline.to(split.words, {
                    opacity: 1,
                    y: 0,
                    duration: 1,
                    stagger: 0.05,
                    ease: "power2.out"
                }, index === 0 ? 0 : "-=0.5"); // Overlap entre párrafos
            });

            // Animar 改 (kai) - primer kanji
            const kaiTimeline = gsap.timeline({
                scrollTrigger: {
                    trigger: kanjiContainer,
                    start: "top 85%",
                    end: "top 35%",
                    scrub: 1.5,
                    // markers: true,
                }
            });

            kaiTimeline
                .to(kanjiKai, {
                    strokeDashoffset: 0,
                    ease: "none"
                })
                .to(kanjiKaiMeaning, {
                    opacity: 1,
                    duration: 0.2,
                    ease: "power2.out"
                }, "-=0.1");

            // Animar 善 (zen) - segundo kanji
            const zenTimeline = gsap.timeline({
                scrollTrigger: {
                    trigger: kanjiContainer,
                    start: "top 75%",
                    end: "top 25%",
                    scrub: 1.5,
                    // markers: true,
                }
            });

            zenTimeline
                .to(kanjiZen, {
                    strokeDashoffset: 0,
                    ease: "none"
                })
                .to(kanjiZenMeaning, {
                    opacity: 1,
                    duration: 0.1,
                    ease: "power2.out"
                }, "-=0.1");

            console.log('Animaciones de experiencia inicializadas correctamente');

        } catch (error) {
            console.error('Error al inicializar animaciones de experiencia:', error);
        }
    };

    // Iniciar cuando el DOM esté listo
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initExperienceAnimations);
    } else {
        initExperienceAnimations();
    }
</script>