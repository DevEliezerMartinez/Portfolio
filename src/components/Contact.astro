<style>
  .contact-section {
    position: relative;
  }

  .work-together-section {
    background-color: var(--color-orange);
    position: relative;
    overflow: hidden;
  }

  .work-together-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(
      to right,
      transparent 0%,
      var(--color-light-blue) 50%,
      transparent 100%
    );
  }

  /* Animación inicial - elementos ocultos */
  .work-title,
  .work-subtitle,
  .work-description,
  .cta-button,
  .contact-icons {
    opacity: 0;
  }

  .connect-title,
  .connect-description,
  .social-btn {
    opacity: 0;
  }

  /* Estilos para iconos de contacto */
  .contact-icons {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    margin-top: 2rem;
  }

  .contact-icon {
    color: var(--color-blue-deep);
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contact-icon:hover {
    transform: translateY(-5px) scale(1.1);
    filter: drop-shadow(0 5px 15px rgba(0, 0, 0, 0.3));
  }

  .whatsapp-icon:hover {
    color: #25D366;
  }

  .email-icon:hover {
    color: #EA4335;
  }

  .instagram-icon:hover {
    color: #E4405F;
  }

  /* Hover effect para el CTA */
  .cta-button:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }

  /* Hover effect para botones sociales */
  .social-btn {
    position: relative;
    overflow: hidden;
  }

  .social-btn::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.2);
    transform: translate(-50%, -50%);
    transition: width 0.6s, height 0.6s;
  }

  .social-btn:hover::before {
    width: 300px;
    height: 300px;
  }

  .linkedin-btn {
    background-color: #0A1840;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .social-buttons {
      flex-direction: column;
      align-items: center;
    }
    
    .social-btn {
      width: 100%;
      max-width: 280px;
    }
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  // Animaciones para la sección "Trabajemos Juntos"
  const workTimeline = gsap.timeline({
    scrollTrigger: {
      trigger: '.work-together-section',
      start: 'top 70%',
      toggleActions: 'play none none none',
    }
  });

  workTimeline
    .to('.work-title', {
      opacity: 1,
      y: 0,
      duration: 0.8,
      ease: 'power3.out',
    })
    .to('.work-subtitle', {
      opacity: 1,
      y: 0,
      duration: 0.8,
      ease: 'power3.out',
    }, '-=0.4')
    .to('.work-description', {
      opacity: 1,
      y: 0,
      duration: 0.8,
      ease: 'power3.out',
    }, '-=0.4')
    .to('.cta-button', {
      opacity: 1,
      scale: 1,
      duration: 0.6,
      ease: 'back.out(1.7)',
    }, '-=0.3')
    .to('.contact-icons', {
      opacity: 1,
      y: 0,
      duration: 0.6,
      ease: 'power3.out',
    }, '-=0.2');

  // Animación de pulsación para el botón CTA
  gsap.to('.cta-button', {
    scale: 1.05,
    duration: 0.8,
    ease: 'power1.inOut',
    repeat: -1,
    yoyo: true,
    delay: 2,
  });

  // Animaciones para la sección "Conectemos"
  const connectTimeline = gsap.timeline({
    scrollTrigger: {
      trigger: '.connect-section',
      start: 'top 75%',
      toggleActions: 'play none none none',
    }
  });

  connectTimeline
    .to('.connect-title', {
      opacity: 1,
      y: 0,
      duration: 0.8,
      ease: 'power3.out',
    })
    .to('.connect-description', {
      opacity: 1,
      y: 0,
      duration: 0.8,
      ease: 'power3.out',
    }, '-=0.4')
    .to('.social-btn', {
      opacity: 1,
      y: 0,
      scale: 1,
      duration: 0.6,
      stagger: 0.2,
      ease: 'back.out(1.7)',
    }, '-=0.3');

  // Animación al hacer hover en los botones sociales
  const socialButtons = document.querySelectorAll('.social-btn');
  
  socialButtons.forEach(button => {
    button.addEventListener('mouseenter', () => {
      gsap.to(button, {
        scale: 1.1,
        duration: 0.3,
        ease: 'power2.out',
      });
    });
    
    button.addEventListener('mouseleave', () => {
      gsap.to(button, {
        scale: 1,
        duration: 0.3,
        ease: 'power2.out',
      });
    });
  });

  // Set inicial para elementos animados
  gsap.set('.work-title, .work-subtitle, .work-description', { y: 30 });
  gsap.set('.cta-button', { scale: 0.8 });
  gsap.set('.contact-icons', { y: 20 });
  gsap.set('.connect-title, .connect-description', { y: 30 });
  gsap.set('.social-btn', { y: 20, scale: 0.9 });
</script>