<style>
  /* Fondo de estrellas animadas */
  .stars-container {
    background: radial-gradient(ellipse at bottom, #1b2735 0%, #090a0f 100%);
  }

  .star {
    position: absolute;
    width: 2px;
    height: 2px;
    background: white;
    border-radius: 50%;
    animation: twinkle 3s infinite ease-in-out;
  }

  .star:nth-child(1) {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }

  .star:nth-child(2) {
    top: 40%;
    left: 80%;
    animation-delay: 0.5s;
  }

  .star:nth-child(3) {
    top: 60%;
    left: 30%;
    animation-delay: 1s;
  }

  .star:nth-child(4) {
    top: 80%;
    left: 70%;
    animation-delay: 1.5s;
  }

  .star:nth-child(5) {
    top: 30%;
    left: 50%;
    animation-delay: 2s;
  }

  @keyframes twinkle {
    0%, 100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 1;
      transform: scale(1.5);
    }
  }

  /* Gradiente sutil en el texto */
  .message-content p {
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.5);
  }

  /* Efecto de glow en spans destacados */
  .text-cyan-400,
  .text-purple-400,
  .text-pink-400,
  .text-yellow-400 {
    text-shadow: 0 0 20px currentColor;
  }

  /* Animaci√≥n de los botones */
  .cta-button {
    box-shadow: 0 0 30px rgba(168, 85, 247, 0.4);
  }

  .whatsapp-button {
    box-shadow: 0 0 30px rgba(34, 197, 94, 0.4);
  }

  .whatsapp-button:hover {
    box-shadow: 0 0 50px rgba(34, 197, 94, 0.6);
  }

  .email-button:hover {
    box-shadow: 0 0 50px rgba(168, 85, 247, 0.6);
  }
</style>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { TextPlugin } from "gsap/TextPlugin";

  gsap.registerPlugin(ScrollTrigger, TextPlugin);

  // Animaci√≥n de reveal del t√≠tulo con efecto de cortina
  gsap.from(".reveal-text", {
    scrollTrigger: {
      trigger: ".final-message-section",
      start: "top 80%",
    },
    y: 100,
    opacity: 0,
    duration: 1.2,
    ease: "power4.out",
  });

  // Fade in escalonado de los p√°rrafos
  const paragraphs = gsap.utils.toArray(".fade-paragraph");
  paragraphs.forEach((paragraph, index) => {
    gsap.to(paragraph, {
      scrollTrigger: {
        trigger: ".final-message-section",
        start: "top 60%",
      },
      opacity: 1,
      y: 0,
      duration: 1,
      delay: 0.3 + index * 0.2,
      ease: "power2.out",
    });
    
    gsap.set(paragraph, { y: 30 });
  });

  // Animaci√≥n de la firma con efecto de escritura
  const signatureLines = gsap.utils.toArray(".signature-line");
  signatureLines.forEach((line, index) => {
    gsap.to(line, {
      scrollTrigger: {
        trigger: ".signature-container",
        start: "top 80%",
      },
      opacity: 1,
      x: 0,
      duration: 0.8,
      delay: index * 0.2,
      ease: "power2.out",
    });
    
    gsap.set(line, { x: -20 });
  });

  // Animaci√≥n del contenedor de botones con bounce
  gsap.to(".cta-container", {
    scrollTrigger: {
      trigger: ".cta-container",
      start: "top 90%",
    },
    opacity: 1,
    scale: 1,
    duration: 0.6,
    ease: "back.out(1.7)",
  });

  gsap.set(".cta-container", { scale: 0.8 });

  // Efecto de parallax sutil en las estrellas
  gsap.to(".star", {
    y: "random(-100, 100)",
    x: "random(-100, 100)",
    duration: "random(3, 5)",
    repeat: -1,
    yoyo: true,
    ease: "sine.inOut",
    stagger: {
      each: 0.2,
      from: "random",
    },
  });

  // Efecto de hover en el t√≠tulo
  const title = document.querySelector(".reveal-text");
  if (title) {
    title.addEventListener("mouseenter", () => {
      gsap.to(title, {
        scale: 1.05,
        duration: 0.3,
        ease: "power2.out",
      });
    });

    title.addEventListener("mouseleave", () => {
      gsap.to(title, {
        scale: 1,
        duration: 0.3,
        ease: "power2.out",
      });
    });
  }
</script>