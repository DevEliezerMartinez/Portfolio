---
// Milestone.astro - Sección de hitos con animación de trayectoria y scroll horizontal
const milestones = [
  {
    year: "1995",
    title: "Motor 2JZ Swap",
    description: "Swap de motor 2JZ de Toyota con turbo instalado, generando 400 HP a las ruedas.",
    specs: ["2JZ Turbo", "400 HP", "Manual Conversion"]
  },
  {
    year: "Transmisión",
    title: "Manual Conversion",
    description: "Conversión completa de automático a manual con clutch reforzado y pesado.",
    specs: ["Manual", "Heavy Clutch", "Reinforced"]
  },
  {
    year: "Suspensión",
    title: "Kit de Ángulo",
    description: "Coilovers modificados con kit de ángulo y diferencial soldado para drift extremo.",
    specs: ["Coilovers", "Angle Kit", "Welded Diff"]
  },
  {
    year: "Frenos",
    title: "Wilwood Big Brake",
    description: "Sistema Wilwood de 6 pistones delanteros con freno hidráulico y dual caliper trasero.",
    specs: ["6-Piston", "Hydro E-Brake", "Dual Caliper"]
  },
  {
    year: "Exterior",
    title: "Midnight Purple 2",
    description: "Pintura camaleón tricapa en Midnight Purple 2 con body kit KBD completo.",
    specs: ["Chameleon Paint", "KBD Body Kit", "Custom Hood"]
  },
  {
    year: "Interior",
    title: "Custom Interior",
    description: "Asientos blancos, consola modificada para hydro, pedalera Wilwood con 3 bombas maestras.",
    specs: ["White Seats", "Wilwood Pedals", "Custom Console"]
  },
  {
    year: "Performance",
    title: "Track Ready",
    description: "Optimizado 100% para drift con bias de frenos, instrumentación completa y monitoreo por laptop.",
    specs: ["Drift Spec", "Full Monitor", "Bias System"]
  },
  {
    year: "2024",
    title: "Build Complete",
    description: "8 meses de construcción por el equipo completo. Primera salida: 3 horas sin problemas.",
    specs: ["8 Months", "Full Custom", "Team Built"]
  }
];
---

<section class="milestone-section relative w-full bg-gradient-to-b from-black via-zinc-900 to-black overflow-hidden py-32">
  
  <!-- Header con título principal -->
  <div class="max-w-7xl mx-auto px-8 mb-20">
    <div class="flex items-end justify-between border-b border-orange-500/30 pb-6">
      <div>
        <p class="text-orange-500 text-sm tracking-[0.3em] mb-4">BUILD TIMELINE</p>
        <h2 class="text-6xl md:text-8xl font-black text-white leading-none tracking-tight">
          THE JOURNEY
        </h2>
      </div>
      <div class="text-right">
        <p class="text-white/40 text-sm tracking-widest">GEAR 03</p>
        <p class="text-orange-500 text-2xl font-bold">8 MONTHS</p>
      </div>
    </div>
  </div>

  <!-- SVG Track -->
  <div class="max-w-5xl mx-auto px-8 mb-20">
    <div id="svg-track-container" class="relative bg-zinc-900/50 rounded-2xl p-8 border border-orange-500/20">
      <svg viewBox="0 0 304 112" class="w-full h-auto opacity-80">
