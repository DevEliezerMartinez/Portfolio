---
import "@/styles/global.css";
import Layout from "@layouts/Layout.astro";
import Header from "@components/Header_pages.astro";
---

<Layout title="Contacto - Eliezer Martinez Portfolio">
  <Header />
  
  <main class="contact-page">
    <!-- Hero Section -->
    <section class="hero-section py-20 px-6 md:px-12">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="hero-title text-5xl md:text-6xl lg:text-7xl font-bold mb-6">
          Contacto
        </h1>
        <p class="hero-subtitle text-xl md:text-2xl max-w-2xl mx-auto">
          Estoy completamente abierto a colaboraciones, proyectos y listo para
          rediseñar el futuro con innovación
        </p>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="form-section py-12 px-6 md:px-12">
      <div class="max-w-2xl mx-auto">
        <div class="form-container rounded-2xl p-8 md:p-12 shadow-2xl">
          <h2 class="form-title text-3xl md:text-4xl font-bold mb-8 text-center">
            Envíame un mensaje
          </h2>
          
          <form
            action="https://formspree.io/f/xpzvbjqq"
            method="POST"
            class="contact-form space-y-6"
          >
            <!-- Nombre -->
            <div class="form-group">
              <label for="name" class="form-label block text-sm font-semibold mb-2">
                Nombre
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="form-input w-full rounded-lg p-4 text-base transition-all duration-300 focus:outline-none focus:ring-2"
                placeholder="Tu nombre completo"
              />
            </div>

            <!-- Email -->
            <div class="form-group">
              <label for="email" class="form-label block text-sm font-semibold mb-2">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="form-input w-full rounded-lg p-4 text-base transition-all duration-300 focus:outline-none focus:ring-2"
                placeholder="tu@email.com"
              />
            </div>

            <!-- Asunto -->
            <div class="form-group">
              <label for="asunto" class="form-label block text-sm font-semibold mb-2">
                Asunto
              </label>
              <input
                type="text"
                id="asunto"
                name="asunto"
                required
                class="form-input w-full rounded-lg p-4 text-base transition-all duration-300 focus:outline-none focus:ring-2"
                placeholder="¿De qué se trata?"
              />
            </div>

            <!-- Mensaje -->
            <div class="form-group">
              <label for="message" class="form-label block text-sm font-semibold mb-2">
                Mensaje
              </label>
              <textarea
                id="message"
                name="message"
                rows="6"
                required
                class="form-input w-full rounded-lg p-4 text-base transition-all duration-300 focus:outline-none focus:ring-2 resize-none"
                placeholder="Cuéntame sobre tu proyecto o idea..."
              ></textarea>
            </div>

            <!-- Submit Button -->
            <button
              type="submit"
              class="submit-btn w-full rounded-full py-4 px-8 text-lg font-bold transition-all duration-300 transform hover:scale-105"
            >
              Enviar Mensaje
            </button>
          </form>
        </div>
      </div>
    </section>

    <!-- Contact Info Section -->
    <section class="info-section py-16 px-6 md:px-12">
      <div class="max-w-4xl mx-auto">
        <h2 class="info-title text-3xl md:text-4xl font-bold mb-12 text-center">
          Otras formas de contacto
        </h2>
        
        <div class="contact-methods grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- WhatsApp -->
          <a 
            href="https://wa.me/527331701927" 
            target="_blank"
            rel="noopener noreferrer"
            class="contact-method-card p-6 rounded-xl text-center transition-all duration-300 hover:transform hover:scale-105"
          >
            <div class="icon-wrapper mb-4 flex justify-center">
              <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 24 24">
                <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z"/>
              </svg>
            </div>
            <h3 class="card-title text-xl font-bold mb-2">WhatsApp</h3>
            <p class="card-description text-sm opacity-80">Envíame un mensaje directo</p>
          </a>

          <!-- Email -->
          <a 
            href="mailto:develiezermartinez@gmail.com" 
            class="contact-method-card p-6 rounded-xl text-center transition-all duration-300 hover:transform hover:scale-105"
          >
            <div class="icon-wrapper mb-4 flex justify-center">
              <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
              </svg>
            </div>
            <h3 class="card-title text-xl font-bold mb-2">Email</h3>
            <p class="card-description text-sm opacity-80 break-all">develiezermartinez@gmail.com</p>
          </a>

          <!-- Instagram -->
          <a 
            href="https://www.instagram.com/eliezer_martinez.dev/" 
            target="_blank"
            rel="noopener noreferrer"
            class="contact-method-card p-6 rounded-xl text-center transition-all duration-300 hover:transform hover:scale-105"
          >
            <div class="icon-wrapper mb-4 flex justify-center">
              <svg class="w-16 h-16" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </div>
            <h3 class="card-title text-xl font-bold mb-2">Instagram</h3>
            <p class="card-description text-sm opacity-80">@eliezer_martinez.dev</p>
          </a>
        </div>
      </div>
    </section>

    <!-- Social Links Section -->
    <section class="social-section py-16 px-6 md:px-12">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="social-title text-3xl md:text-4xl font-bold mb-8">
          Conecta conmigo
        </h2>
        
        <div class="social-links flex flex-wrap justify-center gap-4">
          <a 
            href="https://www.linkedin.com/in/eliezermartinez/" 
            target="_blank"
            rel="noopener noreferrer"
            class="social-link px-8 py-4 rounded-lg text-lg font-semibold transition-all duration-300"
          >
            LinkedIn
          </a>
          
          <a 
            href="https://github.com/DevEliezerMartinez" 
            target="_blank"
            rel="noopener noreferrer"
            class="social-link px-8 py-4 rounded-lg text-lg font-semibold transition-all duration-300"
          >
            GitHub
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>

<style>
  .contact-page {
    min-height: 100vh;
    background: #0A1840;
  }

  /* Hero Section */
  .hero-section {
    background: linear-gradient(135deg, #FF762A 0%, #ff8c42 100%);
    position: relative;
  }

  .hero-title {
    color: #0A1840;
    animation: fadeInUp 0.8s ease forwards;
  }

  .hero-subtitle {
    color: #1a2850;
    animation: fadeInUp 0.8s ease 0.2s forwards;
  }

  /* Form Section */
  .form-section {
    background: #0A1840;
  }

  .form-container {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    animation: fadeInUp 0.8s ease 0.4s forwards;
  }

  .form-title {
    color: #A8D5E2;
  }

  .form-label {
    color: #A8D5E2;
  }

  .form-input {
    background: rgba(255, 255, 255, 0.9);
    border: 2px solid transparent;
    color: #0A1840;
  }

  .form-input:focus {
    border-color: #FF762A;
    ring-color: #FF762A;
    background: white;
  }

  .form-input::placeholder {
    color: rgba(10, 24, 64, 0.5);
  }

  .submit-btn {
    background: linear-gradient(135deg, #FF762A 0%, #ff8c42 100%);
    color: #0A1840;
    font-weight: 700;
    box-shadow: 0 4px 15px rgba(255, 118, 42, 0.3);
  }

  .submit-btn:hover {
    box-shadow: 0 8px 25px rgba(255, 118, 42, 0.5);
  }

  /* Contact Info Section */
  .info-section {
    background: #0A1840;
    position: relative;
    z-index: 1;
  }

  .info-title {
    color: #A8D5E2;
  }

  .contact-method-card {
    background: rgba(255, 255, 255, 0.08);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.15);
    position: relative;
    z-index: 2;
    opacity: 1 !important;
    visibility: visible !important;
  }

  .contact-method-card .icon-wrapper {
    color: #FF762A;
  }

  .contact-method-card .card-title {
    color: #A8D5E2;
  }

  .contact-method-card .card-description {
    color: rgba(168, 213, 226, 0.8);
  }

  .contact-methods {
    opacity: 1 !important;
    visibility: visible !important;
  }

  .contact-method-card:hover {
    background: rgba(255, 255, 255, 0.12);
    border-color: #FF762A;
    box-shadow: 0 10px 30px rgba(255, 118, 42, 0.3);
  }

  /* Social Section */
  .social-section {
    background: #A8D5E2;
    position: relative;
    z-index: 1;
  }

  .social-title {
    color: #1a2850;
  }

  .social-link {
    background: #1a2850;
    color: white;
    position: relative;
    z-index: 2;
    opacity: 1 !important;
    visibility: visible !important;
  }

  .social-links {
    opacity: 1 !important;
    visibility: visible !important;
  }

  .social-link:hover {
    background: #FF762A;
    transform: translateY(-3px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .hero-subtitle {
      font-size: 1.25rem;
    }

    .form-container {
      padding: 2rem;
    }

    .contact-methods {
      gap: 1rem;
    }
  }
</style>

<script>
  // Validación del formulario con feedback visual
  const form = document.querySelector('.contact-form');
  const inputs = form?.querySelectorAll('.form-input');

  inputs?.forEach(input => {
    input.addEventListener('blur', () => {
      if (input.value.trim() !== '') {
        input.style.borderColor = '#FF762A';
      }
    });

    input.addEventListener('focus', () => {
      input.style.borderColor = '#FF762A';
    });
  });

  // Success message después del envío
  form?.addEventListener('submit', (e) => {
    const submitBtn = form.querySelector('.submit-btn');
    if (submitBtn) {
      submitBtn.textContent = 'Enviando...';
      submitBtn.style.opacity = '0.7';
    }
  });
</script>